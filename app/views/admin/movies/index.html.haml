%h1 Movies page

.new-movie
  = link_to "Add New", new_admin_movie_path
%table
  %tr
    %th Title
    %th Year
    %th{colspan: 2} Manage
  - @movies.each do |movie|
    %tr
      %td= movie.title
      %td= movie.year
      %td= link_to "Edit", edit_admin_movie_path(movie)
      %td= button_to "Delete", admin_movie_path(movie), method: :delete
      